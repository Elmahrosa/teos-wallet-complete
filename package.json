{
  "name": "teos-wallet",
  "version": "1.0.0",
  "description": "The World's Most Advanced Multi-Chain Wallet with Egyptian Heritage - From Egypt to the World",
  "main": "frontend/index.html",
  "scripts": {
    "start": "cd frontend && python3 -m http.server 8000",
    "backend": "cd backend && python3 app.py",
    "dev": "concurrently \"npm run backend\" \"npm run start\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && pip install -r requirements.txt",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "echo 'Frontend tests not implemented yet'",
    "test:backend": "cd backend && python -m pytest",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "lint": "eslint frontend/wallet.js",
    "format": "prettier --write frontend/*.{html,css,js}",
    "docs": "echo 'Documentation available in docs/ directory'",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Elmahrosa/Teos-Wallet.git"
  },
  "keywords": [
    "cryptocurrency",
    "wallet",
    "blockchain",
    "multi-chain",
    "defi",
    "nft",
    "solana",
    "ethereum",
    "bitcoin",
    "teos",
    "egypt",
    "pharaoh",
    "heritage",
    "pioneers"
  ],
  "author": {
    "name": "TEOS Egypt Team",
    "email": "dev@teosegypt.com",
    "url": "https://teosegypt.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Elmahrosa/Teos-Wallet/issues"
  },
  "homepage": "https://wallet.teosegypt.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.8.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "ethers": "^6.8.0",
    "bitcoinjs-lib": "^6.1.3"
  },
  "config": {
    "frontend_port": 8000,
    "backend_port": 5000,
    "api_base_url": "http://localhost:5000/api"
  },
  "funding": {
    "type": "token",
    "url": "https://teosegypt.com/funding"
  },
  "contributors": [
    {
      "name": "Egyptian Pioneers Community",
      "url": "https://teosegypt.com/pioneers"
    }
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "files": [
    "frontend/",
    "backend/",
    "docs/",
    "scripts/",
    "assets/",
    "README.md",
    "LICENSE"
  ]
}

